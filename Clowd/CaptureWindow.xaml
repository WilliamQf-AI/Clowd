<Window x:Class="Clowd.CaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clowd"
        xmlns:lib="clr-namespace:DrawToolsLib;assembly=DrawToolsLib"
        xmlns:conv="clr-namespace:Clowd.Converters"
        xmlns:controls="clr-namespace:Clowd.Controls"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d" SnapsToDevicePixels="True"
        Icon="/Images/default.ico"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True"
        Title="Capture" Height="500" Width="500">
    <Window.Resources>
        <lib:ToolTypeConverter x:Key="convToolType"/>
        <conv:ColorToBrushConverter x:Key="convColorToBrush"/>
        <conv:RectConverter x:Key="rectConv" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style x:Key="ButtonTool" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Rectangle Name="_bg" Fill="{TemplateBinding Background}"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                            <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            <Rectangle Name="_hover" Fill="#33ffffff"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Hidden" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="_hover" Property="Visibility" Value="Visible"  />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Value="0.5" TargetName="MyContentPresenter" Property="Opacity" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <RoutedCommand x:Key="Command.Upload" />
        <RoutedCommand x:Key="Command.Photo" />
        <RoutedCommand x:Key="Command.Video" />
        <RoutedCommand x:Key="Command.Reset" />
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="U" Command="{StaticResource Command.Upload}" />
        <KeyBinding Key="P" Command="{StaticResource Command.Photo}" />
        <KeyBinding Key="Enter" Command="{StaticResource Command.Photo}" />
        <KeyBinding Key="V" Command="{StaticResource Command.Video}" />
        <KeyBinding Key="R" Command="{StaticResource Command.Reset}" />
        <KeyBinding Key="C" Command="ApplicationCommands.Close" />
        <KeyBinding Key="Esc" Command="ApplicationCommands.Close" />
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource Command.Upload}" Executed="UploadExecuted" />
        <CommandBinding Command="{StaticResource Command.Photo}" Executed="PhotoExecuted" />
        <CommandBinding Command="{StaticResource Command.Video}" Executed="VideoExecuted" />
        <CommandBinding Command="{StaticResource Command.Reset}" Executed="ResetExecuted" />
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseExecuted" />
    </Window.CommandBindings>
    <Grid Name="rootGrid" Cursor="{Binding CanvasCursor}">
        <Image Name="imageBackground"  Source="{Binding ScreenImage}" Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Path Name="surroundFill"  Fill="#99000000" Cursor="{Binding CanvasCursor}">
            <Path.Data>
                <CombinedGeometry GeometryCombineMode="Xor">
                    <CombinedGeometry.Geometry1>
                        <RectangleGeometry>
                            <RectangleGeometry.Rect>
                                <MultiBinding Converter="{StaticResource rectConv}">
                                    <Binding ElementName="rootGrid" Path="ActualWidth"/>
                                    <Binding ElementName="rootGrid" Path="ActualHeight"/>
                                </MultiBinding>
                            </RectangleGeometry.Rect>
                        </RectangleGeometry>
                    </CombinedGeometry.Geometry1>
                    <CombinedGeometry.Geometry2>
                        <RectangleGeometry x:Name="transparentRect" Rect="{Binding CroppingRectangle}" />
                    </CombinedGeometry.Geometry2>
                </CombinedGeometry>
            </Path.Data>
        </Path>
        <Canvas Name="dynamicCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <UserControl Name="selectionBorder" Cursor="None"
                     Width="{Binding CroppingRectangle.Width }"
                     Height="{Binding CroppingRectangle.Height }"
                     Canvas.Left="{Binding CroppingRectangle.X }"
                     Canvas.Top="{Binding  CroppingRectangle.Y }">
                <UserControl.Template>
                    <ControlTemplate TargetType="{x:Type UserControl}">
                        <ControlTemplate.Resources>
                            <Storyboard x:Key="BorderDashAnimation" RepeatBehavior="Forever">
                                <DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
                                 Storyboard.TargetName="rectangle"
                                 Storyboard.TargetProperty="(Shape.StrokeDashOffset)">
                                    <SplineDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                                    <SplineDoubleKeyFrame KeyTime="00:00:00.4000000" Value="8"/>
                                    <SplineDoubleKeyFrame KeyTime="00:00:00.8000000" Value="16"/>
                                    <SplineDoubleKeyFrame KeyTime="00:00:01.2000000" Value="24"/>
                                    <SplineDoubleKeyFrame KeyTime="00:00:01.6000000" Value="32"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </ControlTemplate.Resources>
                        <Grid>
                            <Border Name="ButtonBorder"
                                 BorderThickness="2"
                                    Margin="-1"
                                 Background="Transparent"
                                 BorderBrush="{StaticResource HighlightBrush}">
                            </Border>
                            <Rectangle Name="rectangle"
                                 Stroke="#A5FFFFFF"
                                    Margin="-1"
                                 StrokeThickness="2"
                                 StrokeDashArray="4 4"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource BorderDashAnimation}"/>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </UserControl.Template>
            </UserControl>
            <Border Name="areaSizeIndicator" Padding="10,5,10,5" CornerRadius="15" BorderBrush="{StaticResource HighlightBrush}"
                    BorderThickness="2" Background="White" Opacity="0.8" Height="30" Visibility="Hidden">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock FontSize="12" FontWeight="Bold">
                        <Run Name="areaSizeIndicatorWidth"></Run> x <Run Name="areaSizeIndicatorHeight"></Run>
                    </TextBlock>
                </StackPanel>
            </Border>
            <Grid Name="crosshairTopRight" Visibility="Hidden" SnapsToDevicePixels="True">
                <Border BorderThickness="{Binding NormalThickness}" BorderBrush="{StaticResource HighlightBrush}" Opacity=".7" SnapsToDevicePixels="True" />
                <Rectangle Stroke="#A5FFFFFF" StrokeThickness="{Binding NormalThickness}" StrokeDashArray="8 8" Opacity=".6" SnapsToDevicePixels="True"  />
                <Border BorderThickness="{Binding TopRightThickness}" BorderBrush="{StaticResource HighlightBrush}" SnapsToDevicePixels="True"
                        HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="120" Height="120"/>
                <Rectangle Width="60" Height="5" VerticalAlignment="Bottom" HorizontalAlignment="Left" SnapsToDevicePixels="True"
                           Margin="60,0,0,-2" Fill="{StaticResource HighlightBrush}" />
                <Rectangle Width="5" Height="60" VerticalAlignment="Bottom" HorizontalAlignment="Left" SnapsToDevicePixels="True"
                           Margin="-2,0,0,60" Fill="{StaticResource HighlightBrush}" />
            </Grid>
            <Grid Name="crosshairBottomLeft" Visibility="Hidden" SnapsToDevicePixels="True">
                <Border BorderThickness="{Binding NormalThickness}" BorderBrush="{StaticResource HighlightBrush}" Opacity=".7" SnapsToDevicePixels="True"/>
                <Rectangle Stroke="#A5FFFFFF" StrokeThickness="{Binding NormalThickness}" StrokeDashArray="8 8" Opacity=".6"   SnapsToDevicePixels="True"/>
                <Border BorderThickness="{Binding BottomLeftThickness}" BorderBrush="{StaticResource HighlightBrush}" SnapsToDevicePixels="True"
                        HorizontalAlignment="Right" VerticalAlignment="Top" Width="120" Height="120" />
                <Rectangle Width="60" Height="5" VerticalAlignment="Top" HorizontalAlignment="Right"
                           Margin="0,-2,60,0" Fill="{StaticResource HighlightBrush}" SnapsToDevicePixels="True"/>
                <Rectangle Width="5" Height="60" VerticalAlignment="Top" HorizontalAlignment="Right"
                           Margin="0,60,-2,0" Fill="{StaticResource HighlightBrush}" SnapsToDevicePixels="True" />
            </Grid>

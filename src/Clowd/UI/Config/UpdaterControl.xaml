<UserControl
    x:Class="Clowd.UI.Config.UpdaterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="White"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Margin="0,5,0,5" VerticalAlignment="Center">
            <Run FontWeight="Bold">Current Version:</Run>
            <Run Text="{Binding CurrentVersion}" />
        </TextBlock>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button
                Click="Action_Click"
                Content="{Binding ActionText}"
                IsEnabled="{Binding CanDoAction}" />
        </StackPanel>
        <TextBlock
            Margin="0,5,0,5"
            Foreground="OrangeRed"
            Text="{Binding Status}" />
    </StackPanel>
</UserControl>

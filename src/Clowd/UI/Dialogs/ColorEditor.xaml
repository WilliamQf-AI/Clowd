<Window x:Class="Clowd.UI.Dialogs.ColorEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clowd.UI.Dialogs"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        ResizeMode="NoResize"
        Title="ColorEditor" Height="370" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition />
            <ColumnDefinition Width="80" />
        </Grid.ColumnDefinitions>

        <WrapPanel x:Name="ColorPalette" ItemHeight="15" ItemWidth="15" Orientation="Horizontal" Height="90"
                   Background="{StaticResource CheckeredLightGrayBackgroundBrush}" Width="240"
                   VerticalAlignment="Bottom">

            <Border Background="Black" />
            <Border Background="White" />
            <Border Background="#A0A0A0" />
            <Border Background="#C0C0C0" />
            <Border Background="#7F000000" />
            <Border Background="Transparent" />
       
        </WrapPanel>

        <local:ColorWheel Width="200" Height="200" VerticalAlignment="Top" Margin="0,20,0,0" CurrentColor="{Binding CurrentColor, Mode=TwoWay}" />
     
    </Grid>
</Window>

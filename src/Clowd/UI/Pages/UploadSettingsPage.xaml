<Page
    x:Class="Clowd.UI.Pages.UploadSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Clowd.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Clowd.UI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    xmlns:config="clr-namespace:Clowd.Config;assembly=Clowd.Shared"
    xmlns:conv="clr-namespace:Clowd.UI.Converters"
    Title="GeneralSettingsPage"
    d:Background="White"
    d:DesignHeight="450"
    d:DataContext="{d:DesignInstance Type=config:SettingsUpload}"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Page.Resources>
        <RoutedUICommand x:Key="Commands.ProviderSettings" />
        <conv:StreamToBitmapSourceConverter x:Key="Stream2Bitmap" />
        <Style BasedOn="{StaticResource BodyTextBlockStyle}" TargetType="TextBlock" />
        <Style BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="ComboBox">
            <Setter Property="MinWidth" Value="160" />
            <Setter Property="Margin" Value="0,8,0,12" />
        </Style>
        <Style BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,4,0,8" />
        </Style>
    </Page.Resources>
    <Page.CommandBindings>
        <CommandBinding Command="{StaticResource Commands.ProviderSettings}" Executed="ProviderSettingsCommand" />
    </Page.CommandBindings>
    <wpfui:DynamicScrollViewer Padding="0,0,24,24">
        <controls:SimpleStackPanel>
            <ListView ItemsSource="{Binding Providers}" BorderThickness="0" Background="Transparent">
                <ListView.Style>
                    <Style TargetType="ListView">
                        <Style.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListView">
                                            <TextBlock Text="No upload providers available." />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Style>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.RowSpan="2" MaxHeight="30" MaxWidth="30" Stretch="Uniform" 
                                   Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Source="{Binding Provider.Icon, Converter={StaticResource Stream2Bitmap}}" />
                            <TextBlock Grid.Column="1" Grid.Row="0" VerticalAlignment="Bottom"
                                       Text="{Binding Provider.Name}" FontWeight="Bold" />
                            <TextBlock Grid.Column="1" Grid.Row="1" VerticalAlignment="Top"
                                       Text="{Binding Provider.Description}" />
                            <Button VerticalAlignment="Center" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"
                                    Margin="10" Command="{StaticResource Commands.ProviderSettings}"
                                    CommandParameter="{Binding}">
                                <wpfui:SymbolIcon Symbol="Settings20" Foreground="White"></wpfui:SymbolIcon>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </controls:SimpleStackPanel>
    </wpfui:DynamicScrollViewer>
</Page>